<div class='popup'>
<div class="container">
  <%= erb :_show_messages%>
  <% unless is_attending? @sunday%>
    <form id="iAmGoing" action="/sangria_sundays/<%=@sunday.id%>/attend" method="post">
      <input type="submit" value="I'm going">
    </form>
  <% else %>
    <h1>You are going!</h1>
    <button>Change your mind</button>
  <% end %>

</div>



  <div class="container">
  <h1>This Sangria Sunday...</h1>
  <h2>is being held at <%= @sunday.location %></h2>
  <h2>on <%= @sunday.date %></h2>
  <h2>by <%= @sunday.host.username %></h2>
  <h2>and  <%= @sunday.attendances.size %> people are coming.</h2>
  </div>

  <div class="container">
    <h1>Attendees</h1>
  <ol>
    <% @sunday.attendances.each do |attendance|%>
    <li><%= attendance.user.username %></li>
    <%end %>
  </ol>
  </div>

  <button class="close">close</button>

</div>
